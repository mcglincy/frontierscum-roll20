{
  "name": "frontierscum",
  "version": "1.0.0",
  "description": "Frontier Scum sheet for Roll20.",
  "main": "index.js",
  "scripts": {
    "start": "run-p compile:* postcss",
    "compile:pug": "npx pug3 src/pug/frontierscum.pug --out . -P -w",
    "compile:sass": "npx sass src/scss/frontierscum.scss frontierscum.raw.css --no-source-map --no-charset --watch",
    "postcss": "npx postcss frontierscum.raw.css -o frontierscum.css --use autoprefixer --watch --verbose",
    "format": "prettier --write src/**/*.js"
  },
  "author": "mcglintlock",
  "license": "MIT",
  "devDependencies": {
    "@anduh/pug-cli": "^1.0.0-alpha8",
    "autoprefixer": "^10.4.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "sass": "^1.53.0"
  }
}
